# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=financial_user
RABBITMQ_PASS=financial_pass
RABBITMQ_VHOST=financial_vhost

# JWT Configuration
